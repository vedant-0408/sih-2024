{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ESNext", "DOM"],
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "sourceRoot": "../src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false
    },
    "include": ["./src/**/*.ts"]
}